<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.circularreveal.CircularRevealRelativeLayout
    android:layout_width="300dp"
    android:layout_height="250dp"
    android:id="@+id/relativeLay"
    android:background="@drawable/dia_fragmnet_background"


    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toEndOf="@+id/relativeLay"
            android:layout_toStartOf="@+id/relativeLay"
            android:layout_above="@id/relativeLay"
            android:layout_below="@id/relativeLay"
           android:padding="24dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="How To"
                android:layout_marginBottom="12dp"
                android:textColor="#85633F"
                android:fontFamily="@font/amethysta"
                android:textFontWeight="1000"
                android:letterSpacing="0.2"
                android:textSize="20sp"
                android:layout_gravity="center"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginVertical="10dp"
                android:textSize="16sp"
                android:textColor="#252525"
                android:letterSpacing="0.05"
                android:text="-The mic listens to your word right after the first press.\n\n-After you finish telling your word, Press again to disable the Microphone"
                android:fontFamily="@font/basic"/>
            <android.widget.Button
                android:id="@+id/dismissButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ok , Got it"
                android:textSize="12sp"
                android:background="@drawable/type_and_def_background"
                android:textAllCaps="false"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"/>

        </androidx.appcompat.widget.LinearLayoutCompat>





</com.google.android.material.circularreveal.CircularRevealRelativeLayout>